{
  "name": "kcms-backend",
  "version": "1.0.0",
  "description": "KMIT Clubs Hub Backend",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "worker:audit": "node src/workers/audit.worker.js",
    "worker:cleanup": "node src/workers/cleanup.worker.js",
    "worker:backup": "node src/workers/backup.worker.js",
    "worker:event-report": "node src/workers/event-report.worker.js",
    "seed": "node scripts/seed.js",
    "seed:demo": "node scripts/seed-demo.js",
    "backup": "node scripts/backup.js",
    "backup:daily": "node -e \"require('./src/workers/backup.worker').performBackup('daily')\"",
    "backup:weekly": "node -e \"require('./src/workers/backup.worker').performBackup('weekly')\"",
    "backup:monthly": "node -e \"require('./src/workers/backup.worker').performBackup('monthly')\"",
    "generate:keys": "node scripts/generate-keys.js",
    "db:indexes": "node scripts/create-indexes.js",
    "lint": "eslint .",
    "test": "jest --coverage"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^1.91.1",
    "cloudinary": "^1.31.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.3",
    "exceljs": "^4.3.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "ioredis": "^5.3.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "multer": "^2.0.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.1",
    "pdfkit": "^0.13.0",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "eslint": "^8.30.0",
    "jest": "^29.5.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.1"
  }
}
